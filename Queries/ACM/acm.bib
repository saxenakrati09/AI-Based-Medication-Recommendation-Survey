doi = {10.1145/3706890.3707011},
abstract = {Personalized medication recommendation aims to recommend appropriate medications to patients and has high practical value. In the current drug recommendation research, some recommendation methods ignore patients' personal valid information resulting in inaccurate results, and some recommendation methods using medical knowledge graph as auxiliary information suffer from underutilization of the graph's valid information or bring noise. To alleviate these problems, a multi-task learning model MHKMR with multi-hop knowledge graph embedding to assist personalized medication recommendation is put forward in this paper. Specifically, in the recommendation task, the model utilizes the detailed personal information of the patient to obtain a rich representation of the patient's features; in the knowledge graph embedding task, the model fully explores more effective information in the knowledge graph by utilizing the multi-hop technique. Moreover, the model introduces the information complementarity module to realize the information complementarity between the items in the recommendation and the entities in the knowledge graph, so as to obtain richer drug feature representations. This paper conducts extensive experiments on two public and real datasets and compares them with some advanced baseline models, and the results of the experiments verify that MHKMR provides excellent recommendation performance.},
booktitle = {Proceedings of the 2024 5th International Symposium on Artificial Intelligence for Medicine Science},
pages = {708–715},
numpages = {8},
keywords = {Knowledge graph embedding, Medication recommendation, Multi-task learning},
location = {
