@article{10.1109/TKDE.2024.3437775,
author = {Zhao, Chuang and Zhao, Hongke and Zhou, Xiaofang and Li, Xiaomeng},
title = {Enhancing Precision Drug Recommendations via In-Depth Exploration of Motif Relationships},
