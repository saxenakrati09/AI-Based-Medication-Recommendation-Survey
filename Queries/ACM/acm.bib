@inproceedings{10.1145/3606040.3617446,
author = {Gao, Feng and Chen, Yao and Liu, Maofu},
title = {Prescription Recommendation based on Intention Retrieval Network and Multimodal Medical Indicator},
year = {2023},
isbn = {9798400702716},
